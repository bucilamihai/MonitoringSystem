<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <VBox alignment="CENTER">
        <TextField fx:id="nameField" prefHeight="25.0" prefWidth="480.0" promptText="Enter name">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin></TextField>
        <PasswordField fx:id="passwordField" promptText="Enter password">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin></PasswordField>
      <HBox prefHeight="59.0" prefWidth="400.0" spacing="20.0">
         <children>
            <RadioButton mnemonicParsing="false" text="Manager" fx:id="managerRadioButton"/>
            <RadioButton mnemonicParsing="false" text="Employee" fx:id="employeeRadioButton"/>
         </children>
         <padding>
            <Insets left="20.0" top="20.0" />
         </padding>
      </HBox>
      <VBox prefHeight="150.0" prefWidth="400.0" spacing="20.0">
         <children>
            <DatePicker fx:id="dateDatePicker" prefHeight="26.0" prefWidth="402.0" promptText="Enter date" />
            <TextField fx:id="hourTextField" prefHeight="26.0" prefWidth="100.0" promptText="Enter hour" />
            <TextField fx:id="minuteTextField" prefHeight="26.0" prefWidth="49.0" promptText="Enter minute" />
         </children>
         <padding>
            <Insets bottom="20.0" top="20.0" />
         </padding>
      </VBox>
      <Button mnemonicParsing="false" onAction="#handleLogin" text="Login">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin></Button>
      <padding>
         <Insets left="100.0" right="100.0" />
      </padding>
    </VBox>
</StackPane>
